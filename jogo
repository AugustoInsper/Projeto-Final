# ===== Inicialização =====
# ----- Importa e inicia pacotes
import pygame
import pyglet

pygame.init()

# ----- Gera tela principal
WIDTH = 1000
HEIGHT = 600

pygame.display.set_caption('Hello World!')

# ----- Inicia estruturas de dados
game = True

# ----- Inicia assets
font = pygame.font.SysFont(None, 48)

# ----- Implementa background e player na tela, ambos se comportando como gif
background_gif = pyglet.image.load_animation('source.gif')
bkg_gif_sprite = pyglet.sprite.Sprite(background_gif)

image_gif = pyglet.image.load_animation('red_bird.gif')
image_gif_sprite = pyglet.sprite.Sprite(image_gif)

window = pyglet.window.Window(width=WIDTH, height=HEIGHT)

@window.event
def on_draw():
    window.clear()
    bkg_gif_sprite.draw()
    image_gif_sprite.draw()

pyglet.app.run()

# ===== Loop principal =====
while game:
    # ----- Trata eventos
    for event in pygame.event.get():
        # ----- Verifica consequências
        if event.type == pygame.QUIT:
            game = False

    # ----- Gera saídas
    window.fill((0, 0, 0))  # Preenche com a cor branca

    # ----- Atualiza estado do jogo
    pygame.display.update()  # Mostra o novo frame para o jogador

# ===== Finalização =====
pygame.quit()  # Função do PyGame que finaliza os recursos utilizados

